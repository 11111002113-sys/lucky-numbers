# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/teerresults
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/teerresults

# JWT Secret (Generate a strong random string)
JWT_SECRET=your_very_strong_secret_key_change_this_in_production

# JWT Expiration
JWT_EXPIRE=7d

# Admin Configuration
ADMIN_EMAIL=admin@teerresults.com
ADMIN_PASSWORD=Admin@123456

# CORS Origin (Frontend URL)
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Gmail SMTP)
# IMPORTANT: Use Gmail App Password, not regular password
# Steps to get App Password:
# 1. Go to https://myaccount.google.com/apppasswords
# 2. Select "Mail" and "Other (Custom name)"
# 3. Copy the 16-character password
EMAIL_USERNAME=your-gmail@gmail.com
EMAIL_PASSWORD=your-16-char-app-password
